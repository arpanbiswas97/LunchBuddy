# =========================
# Logging Configuration
# =========================

# One of: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO


# =========================
# Telegram Configuration
# =========================

# Telegram bot token (get from BotFather)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Telegram chat ID to send lunch reminders
TELEGRAM_CHAT_ID=your-chat-id-here


# =========================
# Database Configuration
# =========================

# PostgreSQL connection string
DATABASE_URL=postgresql://lunchbuddy:lunchbuddy_password@localhost:5432/lunchbuddy


# =========================
# Lunch Timings
# =========================

FORM_URL=your-form-url

# Reminder time in HH:MM (24h format) (UTC)
LUNCH_REMINDER_TIME=07:00

# Timeout (in minutes) to respond to the lunch reminder
LUNCH_REMINDER_TIMEOUT=30

# List of days (lowercase)
LUNCH_DAYS=["tuesday", "wednesday", "thursday"]

# =========================
# Lunch Form Configuration
# =========================

# URL of the Lunch Form
FORM_URL=your-form-url-here
